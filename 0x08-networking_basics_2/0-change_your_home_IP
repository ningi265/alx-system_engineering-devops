#!/usr/bin/env bash

# Check if running in Docker
if [ -f /.dockerenv ]; then
    # Configure localhost to resolve to 127.0.0.2
    sed -i '/^127.0.0.1.*localhost/s/$/ 127.0.0.2/' /etc/hosts

    # Configure facebook.com to resolve to 8.8.8.8
    sed -i '/facebook.com/d' /etc/hosts
    echo '8.8.8.8 facebook.com' >> /etc/hosts

    echo "Configuration completed successfully."
else
    echo "This script is intended to run in a Docker container."
    exit 1
fi

